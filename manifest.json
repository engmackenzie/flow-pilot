{
  "manifest_version": 3,
  "name": "FlowPilot",
  "version": "0.1",
  "description": "Record and replay workflows with a guiding cursor.",
  "permissions": ["scripting", "activeTab", "storage"],
  "background": {
    "service_worker": "background.js"
  },
  "action": {
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/cursor.css"]
    }
  ],
  "icons": {
    "128": "icons/icon128.jpeg"
  }
}
