{
  "manifest_version": 3,
  "name": "FlowPilot",
  "version": "0.1",
  "description": "Record and replay workflows with a guiding cursor.",
  "permissions": ["scripting", "activeTab", "storage", "tabs", "sidePanel", "<all_urls>"],
  "background": {
    "service_worker": "background.js"
  },
  "side_panel": {
    "default_path": "sidebar/sidebar.html"
  },
  "action": {
    "default_title": "FlowPilot",
    "default_popup": "popup/popup.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/cursor.css"]
    }
  ],
  "icons": {
    "128": "icons/icon128-nobg.png"
  },
  "web_accessible_resources": [
    {
      "resources": ["sidebar/*"],
      "matches": ["<all_urls>"]
    }
  ]
}
